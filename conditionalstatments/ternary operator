print(result)
#if num=5 

num=int("enter the number")
result=num+1 if num>5 else num-1 if num<5 else 5
print(result)


# if n1>num2
# print(n1-n2)

num1=30
num2=20
result=num1-num2 if num1>num2 else num2-num1
print(result)

